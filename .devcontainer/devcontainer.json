// .devcontainer/devcontainer.json
{
    // Empfohlener Base-Image f체r Node.js Entwicklung
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    
    // Oder ein spezifisches Node-Image, z.B.
    // "image": "mcr.microsoft.com/devcontainers/typescript-node:20",

    "features": {
        // Stelle sicher, dass Node.js installiert ist
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts" // Oder eine spezifische Version wie "20"
        }
    },
    
    // WICHTIG: Definiere den Standardbenutzer als "codespace" oder "vscode"
    // Dies hilft, Permission-Probleme zu vermeiden.
    "remoteUser": "codespace", 
    
    // Optional, aber n체tzlich f체r FiveM (z.B. LUA-Linter)
    "extensions": [
        "ms-vscode.live-server",
        "trixnz.vscode-lua"
    ],

    // Befehl, der nach dem Container-Start im Hintergrund l채uft
    "postCreateCommand": "npm install --prefix web-ui"
}