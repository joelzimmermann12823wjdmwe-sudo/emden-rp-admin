{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/search", "dest": "/api/search.js" },
    { "src": "/api/placeholder-avatar", "dest": "/api/placeholder-avatar.js" },
    { "src": "/api/admin", "dest": "/api/admin.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}